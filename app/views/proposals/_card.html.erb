<!-- proposals -->

<div class="card" id="proposal_card_<%= proposal.id %>">
	<div id="card_corner_cut_out"></div>
	<%= render "proposals/time_ago", proposal: proposal %>
	<!-- shows type of proposal to be motioned -->
	<% if proposal.action.present? and not (proposal.action.eql? 'revision' and proposal.revised_action.nil?) %>
		<div class="action_type_label">
			<strong>
			  <%= "Motion: #{proposal.action.eql?('revision') ? proposal.revised_action : proposal.action }" %>
			</strong>
		</div>
	<% end %>
	<!-- to be triggered when user casts the ending vote -->
	<div id="ratification_glimmer_anchor_<%= proposal.id %>"></div>
	<%= render "proposals/ratification_glimmer", proposal: proposal %>
	<%= render "token/avatar", token: proposal.token, position: :token_card_link %>
	<div align="center">
		<% if proposal.title.present? %>
			<p><%= proposal.title %></p>
		<% end %>
		<% if proposal.image.url %>
			<p><%= image_tag proposal.image, id: :proposal_image %></p>
		<% end %>
		<p id="proposal_body_text"><%= render "app/body", item: proposal %></p>
		<!-- anchor for reinserting the link table -->
		<div id="link_table_anchor_<%= proposal.id %>"></div>
		<!-- link table encapsulated as partial -->
		<%= render "proposals/link_table", proposal: proposal %>
		<!-- anchor for inserting new comment form -->
		<div id="new_form_anchor_<%= proposal.id %>"></div>
	</div>
</div>
